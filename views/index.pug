extends ./header.pug
block append head
	meta(
		name="description",
		content="With Pokécompanion you can quickly find the details you need during your playthrough of a mainline Pokémon game - without scrolling past a sea of irrelevant info."
	)
	meta(
		property="og:description",
		content="With Pokécompanion you can quickly find the details you need during your playthrough of a mainline Pokémon game - without scrolling past a sea of irrelevant info."
	)
	meta(
		name="twitter:description",
		content="With Pokécompanion you can quickly find the details you need during your playthrough of a mainline Pokémon game - without scrolling past a sea of irrelevant info."
	)

	meta(
		property="og:image",
		content="https://pokemon.helbling.uk/static/previews/generic.png"
	)
	meta(
		property="twitter:image",
		content="https://pokemon.helbling.uk/static/previews/generic.png"
	)
	script(src="/static/js/index.js")

block append body
	#notice.message.is-warning
		.message-header
			p Notice
			button.delete(onclick="hideNotice();")
		.message-body
			p The underlying data may not always be accurate. Please see the "About" page for more details.

	.columns
		.column.is-flex
			.card.primary(style="width: 100%")
				.card-header-title
					p Pokémon of the day
				.card-content.pt-0(style="text-align: center")
					a(href=`${pokemon.link}`)
						.box.accented
							img(src=`${pokemon.sprite}`)
							p ##{ pokemon.id } #{ pokemon.primaryLang }
							if pokemon.primaryLang !== pokemon.secondaryLang && pokemon.secondaryLang
								p #{ pokemon.secondaryLang }
		.column.is-flex
			.card.primary(style="width: 100%")
				.card.primary
					.card-header-title
						p Move of the day
					.card-content.pt-0.accented(style="text-align: center")
						a(href=`${move.link}`)
							.box.accented
								if (move.primaryLang && !move.secondaryLang) || (move.primaryLang === move.secondaryLang)
									p #{ move.primaryLang }
								else if !move.primaryLang && move.secondaryLang
									p #{ move.secondaryLang }
								else if move.primaryLang !== move.secondaryLang
									p #{ move.primaryLang } - #{ move.secondaryLang }
				.card.primary
					.card-header-title
						p Ability of the day
					.card-content.pt-0.accented(style="text-align: center")
						a(href=`${ability.link}`)
							.box.accented
								if (ability.primaryLang && !ability.secondaryLang) || (ability.primaryLang === ability.secondaryLang)
									p #{ ability.primaryLang }
								else if !ability.primaryLang && ability.secondaryLang
									p #{ ability.secondaryLang }
								else if ability.primaryLang !== ability.secondaryLang
									p #{ ability.primaryLang } - #{ ability.secondaryLang }

	.box
		p.title.is-3 Changelog
		.content
			p.title.is-5 17 March 2023
			ul
				li #[a.is-underlined(href="https://github.com/helblingjoel/pokewiki/issues/18") #18] Showcase sprites can be shiny
				li #[a.is-underlined(href="https://github.com/helblingjoel/pokewiki/issues/19") #19] Combine duplicate Pokédex entries
				li #[a.is-underlined(href="https://github.com/helblingjoel/pokewiki/issues/20") #20] Changing search options always brought back to homepage
			p.title.is-5 07 March 2023
			ul
				li Added type weaknesses to Pokémon pages
				li Search supports having leading 0s when searching by National Dex Id
			p.title.is-5 06 March 2023
			ul
				li Fixed issue where search would only use the secondary language

			p#extendChangelog Show more...
			#oldChanges.hidden
				p.title.is-5 26 February 2023
				ul
					li Multi language support
					li Added "About" page
					li Added "...of the day" entries to homepage
					li Display more search results
				p.title.is-5 11 February 2023
				ul
					li Implemented Move pages
					li Improved alt-tags across site
					li Tidied "Move" search results
					li Backend support for multi language
				p.title.is-5 09 February 2023
				ul
					li Added social media link previews
					li Updated favicon
					li Readjusted X / Y sprite sizing
					li Synchronised when all gifs on a page will start playing.
						ul
							li Also fixed an issue where sprite descriptions weren't loading
				p.title.is-5 04 February 2023
				ul
					li Implemented Ability pages
					li Added description on item page that will state when an Item isn't in the selected game.
					li Corrected move damage classes for Generations 1-3
					li Backend support for different languages in certain areas
				p.title.is-5 29 January 2023
				ul
					li Added dark theme support
					li Implemented Item pages
					li Improved error handling
				p.title.is-5 27 January 2023
				ul
					li Selecting a game will display Pokémon sprites of that generation
					li Caching API responses
